#!/bin/bash
PREFIX=$1
NAME=$2
CHILD=$3
cat <<EOF
#!/bin/bash
. ./authn
NAME=\$1
JSON=\$2
ADDL=\$3
if [[ -z "\${ADDL}" ]] ; then
   ADDL="--header,Accept: application/json,--header,Content-Type: application/json"
fi
IFS=',' read -r -a array <<< "\$ADDL"
curl \${OPT} -s -k -H "\$AUTHN" \\
   -X PUT \\
   "\${array[@]}" \\
   -d @\$JSON \\
   "https://\${RESTHOST}:\${RESTPORT}${PREFIX}${NAME}/${CHILD}/\${NAME}"
EOF
