#!/bin/bash
PREFIX=$1
NAME=$2
CHILD=$3
cat <<EOF
#!/bin/bash
. ./authn
NAME=\$1
JSON=\$2
QUERY=\$3
ADDL=\$4
if [[ ! -z "\$QUERY" ]] ; then
   QUERY=?"\$QUERY"
fi
if [[ -z "\${ADDL}" ]] ; then
   ADDL="--header,Accept: application/json,--header,Content-Type: application/json,-d"
fi
IFS=',' read -r -a array <<< "\$ADDL"
curl \${OPT} -s -k -H "\$AUTHN" \\
   -X PUT \\
   "\${array[@]}" \\
   @\$JSON \\
   "https://\${RESTHOST}:\${RESTPORT}${PREFIX}${NAME}/${CHILD}/\${NAME}\${QUERY}"
EOF
